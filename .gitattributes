# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts must use LF (for Linux/macOS compatibility)
*.sh text eol=lf

# Windows batch files must use CRLF
*.bat text eol=crlf

# JavaScript/TypeScript/JSON files
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.cjs text eol=lf

# Python files
*.py text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
